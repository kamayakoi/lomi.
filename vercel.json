{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/instant/:linkId", "destination": "/instant/:linkId" },
    { "source": "/product/:linkId", "destination": "/product/:linkId" },
    { "source": "/plan/:linkId", "destination": "/plan/:linkId" },
    { "source": "/portal/(.*)", "destination": "/portal/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}